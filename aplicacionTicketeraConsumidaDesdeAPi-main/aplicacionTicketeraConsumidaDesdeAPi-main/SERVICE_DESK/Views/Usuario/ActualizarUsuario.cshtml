@model Usuario
@{
    ViewData["Title"] = "ActualizarUsuario";
    Layout = "~/Views/Shared/_Plantillaticketera.cshtml";
}

<h1>ActualizarUsuario</h1>

<div class="col-md-12 col-lg-9 col-xl-9">
    <div class="main-container container-fluid">
        <div class="row row-sm">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-body">
                        <form asp-action="ActualizarUsuario" method="post">
                            <div class="form-group">
                                <label for="IdUsuario">ID</label>
                                <input type="text" class="form-control" id="IdUsuario" name="IdUsuario" value="@Model.IdUsuario" readonly />
                            </div>
                            <div class="form-group">
                                <label for="nombre">Nombre</label>
                                <input type="text" class="form-control" id="nombre" name="nombre" value="@Model.nombre" />
                                <span asp-validation-for="nombre" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label for="apellido">Apellido</label>
                                <input type="text" class="form-control" id="apellido" name="apellido" value="@Model.apellido" />
                                <span asp-validation-for="apellido" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label for="correo">Correo</label>
                                <input type="text" class="form-control" id="correo" name="correo" value="@Model.correo" />
                                <span asp-validation-for="correo" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label for="contrasena">Contraseña</label>
                                <input type="text" class="form-control" id="contrasena" name="contrasena" value="@Model.contrasena" />
                                <span asp-validation-for="contrasena" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label for="Rol">Rol</label>
                                <input type="text" class="form-control" id="Rol" name="Rol" value="@Model.Rol" />
                                <span asp-validation-for="Rol" class="text-danger"></span>
                            </div>
                            <button type="submit" class="btn btn-primary">Aceptar</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}