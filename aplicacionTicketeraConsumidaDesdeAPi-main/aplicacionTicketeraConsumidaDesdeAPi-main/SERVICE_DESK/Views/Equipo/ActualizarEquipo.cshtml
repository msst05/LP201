@model equipo
@{
    ViewData["Title"] = "ActualizarEquipo";
    Layout = "~/Views/Shared/_Plantillaticketera.cshtml";
}

<h1>Actualizar Equipo</h1>

<div class="col-md-12 col-lg-9 col-xl-9">
    <div class="main-container container-fluid">
        <div class="row row-sm">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-body">
                        <form asp-action="ActualizarEquipo" method="post">
                            <div class="form-group">
                                <label for="idEquipo">ID</label>
                                <input type="text" class="form-control" id="idEquipo" name="idEquipo" value="@Model.idEquipo" readonly />
                            </div>
                            <div class="form-group">
                                <label for="descripcion">Descripción</label>
                                <input type="text" class="form-control" id="descripcion" name="descripcion" value="@Model.descripcion" />
                                <span asp-validation-for="descripcion" class="text-danger"></span>
                            </div>
                            <button type="submit" class="btn btn-primary">Aceptar</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}