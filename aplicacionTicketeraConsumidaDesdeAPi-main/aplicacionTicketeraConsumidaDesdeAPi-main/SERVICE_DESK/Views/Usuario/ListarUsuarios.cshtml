@model Usuario
@{
    ViewData["Title"] = "ListarUsuarios";
    Layout = "~/Views/Shared/_Plantillaticketera.cshtml";
}

<h1>ListarUsuarios</h1>
<div class="col-md-12 col-lg-9 col-xl-9">
    <div class="main-container container-fluid">
        <div class="row row-sm">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-header d-flex justify-content-between">
                        <h4 class="fw-bolder">Listado Usuarios</h4>
                    </div>
                    <div class="text-left mb-2">
                        <a asp-action="CrearUsuario" class="btn btn-success">Nuevo Usuario</a>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">

                            <table class="table table-xs table-hover" id="dataTableTickets">
                                <thead>
                                    <tr>
                                        <th>ID</th>
                                        <th>Nombre</th>
                                        <th>Apellido</th>
                                        <th>Correo</th>
                                        <th>Contraseña</th>
                                        <th>Rol</th>
                                        <th>Acciones</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @if (ViewBag.Usuario != null)
                                    {
                                        @foreach (var Usuario in ViewBag.Usuario)
                                        {
                                            <tr>
                                                <td class="td-ellipsis td-sistema" title="@Usuario.IdUsuario">
                                                    <h6 class="fw-bold"><i class="zmdi zmdi-ticket-star"></i> @Usuario.IdUsuario</h6>
                                                </td>
                                                <td>@Usuario.nombre</td>
                                                <td>@Usuario.apellido</td>
                                                <td>@Usuario.correo</td>
                                                <td>@Usuario.contrasena</td>
                                                <td>@Usuario.Rol</td>
                                                <td class="text-center td-sistema">
                                                    @{
                                                        string editarUsuarioUrl = $"/Usuario/BuscarUsuario?id={Usuario.IdUsuario}";
                                                    }
                                                    <a href="@editarUsuarioUrl" type="button" class="boton boton-black" style="max-height:35px!important;">
                                                        Editar
                                                    </a>
                                                </td>
                                                <td class="text-center td-sistema">
                                                    <form asp-action="EliminarUsuario" asp-route-id="@Usuario.IdUsuario" method="post" onsubmit="return confirm('¿Estás seguro de que deseas eliminar este usuario?');">
                                                        <button type="submit" class="btn btn-danger">Eliminar</button>
                                                    </form>
                                                </td>
                                            </tr>
                                        }
                                    }
                                    else
                                    {
                                        <tr>
                                            <td colspan="3">No hay usuarios disponibles.</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
